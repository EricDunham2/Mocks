<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.projects.mocks.fragments.OverviewFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_height="50dp"
        android:id="@+id/overviewBalance"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:layout_width="180dp"
        android:textSize="20sp"
        android:textAlignment="center" />

    <TextView
        android:text="Balance"
        android:id="@+id/textView5"
        android:layout_width="190dp"
        android:layout_below="@+id/overviewTitle"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:textSize="30sp"
        android:layout_height="40dp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:id="@+id/overviewUsername"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Overview"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/overviewTitle"
        android:layout_below="@+id/overviewUsername"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textSize="30sp"
        android:textAlignment="center" />

    <TextView
        android:text="Market Value"
        android:id="@+id/textView4"
        android:layout_width="190dp"
        android:textSize="30sp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignParentEnd="true"
        android:textAlignment="center" />

    <TextView
        android:layout_height="50dp"
        android:id="@+id/overviewMarketValue"
        android:layout_width="180dp"
        android:layout_alignBaseline="@+id/overviewBalance"
        android:layout_alignBottom="@+id/overviewBalance"
        android:layout_alignParentEnd="true"
        android:textSize="20sp"
        android:textAlignment="center" />

    <TextView
        android:text="Your Stocks"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView8"
        android:textSize="30sp"
        android:textAlignment="center" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="39dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/overviewPortfolio" />
</RelativeLayout>
