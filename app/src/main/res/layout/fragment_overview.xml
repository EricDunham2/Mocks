<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.projects.mocks.fragments.OverviewFragment"
             android:background="?attr/bgColor"
            >

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_height="50dp"
        android:textColor="?attr/txtColor"
        android:id="@+id/overviewBalance"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:layout_width="180dp"
        android:textSize="20sp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="150dp"
        android:textColor="?attr/txtColor"
        android:layout_height="30dp"
        android:id="@+id/overviewUsername"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_height="50dp"
        android:textColor="?attr/txtColor"
        android:id="@+id/overviewMarketValue"
        android:layout_width="180dp"
        android:layout_alignBaseline="@+id/overviewBalance"
        android:layout_alignBottom="@+id/overviewBalance"
        android:layout_alignParentEnd="true"
        android:textSize="20sp"
        android:textAlignment="center" />

    <TextView
        android:text="Your Stocks"
        android:textColor="?attr/txtColor"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView8"
        android:textSize="30sp"
        android:textAlignment="center" />

    <ListView
        android:layout_width="match_parent"
        android:background="?attr/bgColor"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="39dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/overviewPortfolio"
        android:layout_margin="20dp" />

    <TextView
        android:text="Market Value"
        android:textColor="?attr/txtColor"
        android:id="@+id/textView4"
        android:layout_width="190dp"
        android:textSize="30sp"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:layout_below="@+id/overviewUsername"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Balance"
        android:textColor="?attr/txtColor"
        android:id="@+id/textView5"
        android:layout_width="190dp"
        android:textSize="30sp"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignParentStart="true" />


</RelativeLayout>
